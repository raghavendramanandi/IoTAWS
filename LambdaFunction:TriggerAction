exports.handler = (event, context, callback) => {
    
    var AWS = require('aws-sdk');
    var docClient = new AWS.DynamoDB.DocumentClient();
    
    console.log(event.hello)
    
    var lightStatus = "off"
    var team = "p4r"
    var deviceId = 3
    var oppositLightStatus = (lightStatus == 'off') ? "on":"off";
    
    
    var params = {
    TableName:"DeviceAndLightStatus",
    ProjectionExpression: "#team",
    FilterExpression: "#team = :team AND #lightStatus = :lightStatus",
    ExpressionAttributeNames: {
        "#team":"team",
        "#lightStatus":"lightStatus",
        },
    ExpressionAttributeValues: {
        ":team": team,
        ":lightStatus": oppositLightStatus 
        }
    };

    var items = []
    
    var queryExecute = function(callback) {
    docClient.scan(params,function(err,result) {
        if(err) {
            callback(err);
            } else {
            console.log(result)
            items = items.concat(result.Items);
            console.log("Im not waste: " + items)
            //console.log("Im not waste: " + items.size())
            items.forEach(function(item){
                console.log(item)
            });
            if(result.LastEvaluatedKey) {
                params.ExclusiveStartKey = result.LastEvaluatedKey;
                queryExecute(callback);
                } else {
                    callback(err,items);
                }
            }
        });
    }
    queryExecute(callback);
    
    
    var ec2 = new AWS.EC2({region: 'us-east-2'});
    ec2.stopInstances({InstanceIds : ['i-0f428f17d8be4acd5'] },function (err, data) {
        if (err) console.log(err, err.stack); // an error occurred
        else console.log(data); // successful response
        context.done(err,data);
    });
};
